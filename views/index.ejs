<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>ContactsApp</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
      integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/styles.css" />
  </head>

  <body>
    <h1 class="display-1 text-center">Agenda de Contactos</h1>

    <form action="/users" method="POST" class="form">
      <input type="text" required placeholder="Nombre" name="name" />
      <input type="text" required placeholder="Apellidos" name="surname" />
      <input
        type="tel"
        pattern="[0-9]{9}"
        required
        placeholder="666333222"
        name="phone"
      />
      <input type="email" placeholder="ortiga@amancio.com" name="email" />

      <button type="submit">AÃ±adir Contacto</button>
    </form>

    <% for(var i = 0; i < users.length; i++) {%>
    <div class="card" id="">
      <div class="name"><%= users[i].name %></div>
      <div class="surname"><%= users[i].surname %></div>
      <div class="phone"><%= users[i].phone %></div>
      <div class="email"><%= users[i].email %></div>
      <form action="/delete" method="POST">
        <button type="submit" value="<%= users[i]._id %>" name="id">
          Borrar
        </button>
      </form>
      <form action="/edit" method="post">
        <button type="submit" value="<%= users[i]._id %>" name="id">
          Editar
        </button>
      </form>
    </div>
    <% } %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
